[check-manifest]
ignore =
    *.DS_Store
    .tx
    .tx/*
    .coveragerc
    .csslintrc
    .jshintignore
    .travis.yml
    bootstrap.py
    buildout.cfg
    templates
    templates/*
    travis.cfg


[distutils]
index-servers =
    pypi


[sdist]
formats = zip


[ps.releaser]
diazo_path = src/ps/diazo/{{{ package.name }}}/diazo_resources
add_version_to_title = 1
